{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es2018",
		"jsx": "react",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
